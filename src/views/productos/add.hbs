<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">AGREGAR PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/products/add" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomprod" id="nomprod" placeholder="Nombre" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="descprod" id="descprod" placeholder="Descripción" required>
                        </div>

                        <!-- Select para Categoría -->
                        <div class="input-group mt-2">
                            <label for="categoria" class="input-group-text">Categoría</label>
                            <select class="form-control" name="categoria" id="categoria" required>
                                <option value="" disabled selected>Selecciona una categoría</option>
                                <option value="electronica">Electrónica</option>
                                <option value="ropa">Ropa</option>
                                <option value="audifonos">Audífonos</option>
                                <option value="computadoras">Computadoras</option>
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="text" name="cantprod" id="cantprod" placeholder="Cantidad" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="precio" class="input-group-text">Precio</label>
                            <input class="form-control" type="text" name="cantprec" id="cantprec" placeholder="Precio" required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Guardar</button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/list">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
