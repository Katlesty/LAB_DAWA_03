<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR CATEGORIA</h3>
                </div>
                <div class="card-body">
                    <form action="/categories/|add" method="post">
                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomcat" id="nomcat" placeholder="Nombre"
                                autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="description" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="descat" id="descat" placeholder="Descripción"
                                required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Guardar</button>
                            <button class="btn btn-danger"><a class="nav-link  link-light" aria-current="page"
                                    href="/categories"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


